# Environment variables
NODE_ENV=development
PORT=3000

# CORS Configuration (comma-separated for production)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Development Database configuration
DEV_DB_HOST=localhost
DEV_DB_PORT=5432
DEV_DB_NAME=moviedb_dev
DEV_DB_USER=postgres
DEV_DB_PASSWORD=dev_password

# Production Database configuration
PROD_DB_HOST=your_production_host
PROD_DB_PORT=5432
PROD_DB_NAME=moviedb_prod
PROD_DB_USER=prod_user
PROD_DB_PASSWORD=secure_production_password

# Test Database configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=moviedb_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=test_password

# JWT Secrets (use different secrets for different environments)
DEV_JWT_SECRET=dev_jwt_secret_change_this
PROD_JWT_SECRET=very_secure_production_jwt_secret_change_this
TEST_JWT_SECRET=test_jwt_secret

# Legacy support (fallback if env-specific not found)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=moviedb
DB_USER=postgres
DB_PASSWORD=your_password_here
JWT_SECRET=fallback_secret
